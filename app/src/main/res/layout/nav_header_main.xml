<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/nav_header_main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@drawable/side_nav_bar"
    android:gravity="bottom"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <ImageView
        android:id="@+id/nav_header_user_portrait"
        android:layout_width="@dimen/nav_header_user_portrait_height"
        android:layout_height="@dimen/nav_header_user_portrait_height"
        android:src="@drawable/recordyoyo"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:layout_marginLeft="@dimen/element_space"
        android:gravity="bottom"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nav_header_username"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/nav_header_username_height"
            android:layout_marginBottom="@dimen/element_space_single"
            android:gravity="bottom"
            android:text="YiPeng Zhang"
            android:textSize="@dimen/nav_header_username_size"/>

        <TextView
            android:id="@+id/nav_header_id"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/nav_header_id_height"
            android:layout_marginTop="@dimen/element_space_single"
            android:gravity="top"
            android:text="账号:zypgoole@gmail.com"
            android:textSize="@dimen/nav_header_id_size"/>
    </LinearLayout>


</LinearLayout>
