<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/view_show"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/view_content_background"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/view_image"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        tools:src="@mipmap/view_1"/>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/element_space_single"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/element_space">

        <TextView
            android:id="@+id/view_tittle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:textColor="@color/dark_red_500"
            android:textSize="@dimen/sixteen_sp"
            tools:text="邵忠|心向未来，不同凡“想”"/>

        <TextView
            android:id="@+id/view_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/view_tittle"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/element_space_single"
            android:textColor="@color/grey_500"
            android:textSize="@dimen/twelve_sp"
            tools:text="2016,我们需要前进"/>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_below="@id/view_tittle"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="@dimen/twelve_sp"
            android:src="@mipmap/ic_action_next_item"
            />
    </RelativeLayout>
</LinearLayout>

