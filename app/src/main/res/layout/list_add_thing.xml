<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/text_thing_release"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/list_high_forty"
        android:layout_marginBottom="@dimen/element_space_single"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/element_space_single"
        android:gravity="center_vertical"/>

    <ImageView
        android:id="@+id/img_thing_release"
        android:layout_width="@dimen/thirty_two"
        android:layout_height="@dimen/thirty_two"
        android:layout_alignParentRight="true"
        android:layout_gravity="right"
        android:layout_margin="@dimen/element_space"
        android:src="@mipmap/ic_action_next_item"/>


</RelativeLayout>